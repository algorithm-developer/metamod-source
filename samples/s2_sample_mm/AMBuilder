# vim: set sts=2 ts=8 sw=2 tw=99 et ft=python: 
import os

project = builder.LibraryProject(MMSPlugin.metadata["name"])

for sdk_target in MMSPlugin.sdk_targets:
  sdk = sdk_target.sdk
  cxx = sdk_target.cxx

  binary = MMSPlugin.HL2Library(builder, cxx, project, sdk)

  binary.sources += [
    'src/plugin.cpp',
  ]

  binary.custom = [builder.tools.Protoc(protoc = sdk_target.protoc, sources = [
    os.path.join(sdk['path'], 'common', 'network_connection.proto'),
  ])]

MMSPlugin.tasks += builder.Add(project)